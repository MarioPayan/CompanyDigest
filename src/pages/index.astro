---
import CompanyInput from '../components/CompanyInput.astro';
import CompanyList from '../components/CompanyList.astro';
import AnalyzeButton from '../components/AnalyzeButton.astro';

const prompt = await Astro.glob('./prompt.md');
const promptText = prompt[0].rawContent();
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://unpkg.com/@phosphor-icons/web@2.0.3/src/regular/style.css" />
		<title>Company Digest</title>
	</head>
	<body>
		<h1>Company Digest</h1>
		<CompanyInput />
		<CompanyList />
		<AnalyzeButton />

		<script define:vars={{ promptText }}>
			window.promptText = promptText;
		</script>
		<script>
			import { initApp } from '../scripts/app';
			const promptText = (window as any).promptText;
			initApp(promptText);
		</script>
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	body {
		font-family: system-ui, -apple-system, sans-serif;
		max-width: 600px;
		margin: 0 auto;
		padding: 2rem 1rem;
		background: #f5f5f5;
	}
	h1 {
		margin-bottom: 2rem;
		font-size: 1.5rem;
		color: #333;
	}
</style>
